<%- include('header') -%>
    <div class="box" id="heading">
        <h1>
            <%=Listtittle%>
        </h1>


    </div>

    <div class="box">
        <% for(i=0; i<newadd.length; i++){ %>
            <form action="/delete" method="post">
                <div class="item">
                    <input type="checkbox" name="checked" value="<%=newadd[i]._id%>" onchange="this.form.submit()">
                    <p>
                        <%=newadd[i].Name%>
                    </p>
                </div>
                <input type="hidden" name="listname" value="<%=Listtittle%>">
            </form>

            <% } %>
                <form class="item" action="/" method="post">
                    <input type="text" name="newitem" placeholder="New Task" autocomplete="off">
                    <button type="submit" name="list" value="<%=Listtittle%>">+</button>
                </form>

    </div>
    <%- include('footer') -%>



